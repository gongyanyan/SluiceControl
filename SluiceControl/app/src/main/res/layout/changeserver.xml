<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="开发环境IP: "/>

        <EditText
            android:id="@+id/et_url1"
            android:layout_width="300dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="http://172.16.0.51"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="端口: "/>

        <EditText
            android:id="@+id/et_port1"
            android:layout_width="100dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="8080"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnsave1"
            android:layout_width="80dp"
            android:layout_marginLeft="20dp"
            android:layout_height="60dp"
            android:background="@color/text_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/font_22"
            android:text="保存">

        </Button>

        <Button
            android:id="@+id/btnchange1"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@color/text_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/font_22"
            android:text="切换">

        </Button>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="生产环境IP: "/>

        <EditText
            android:id="@+id/et_url2"
            android:layout_width="300dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="http://172.16.0.51"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="端口: "/>

        <EditText
            android:id="@+id/et_port2"
            android:layout_width="100dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="8080"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnsave2"
            android:layout_width="80dp"
            android:layout_marginLeft="20dp"
            android:layout_height="60dp"
            android:background="@color/text_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/font_22"
            android:text="保存">

        </Button>

        <Button
            android:id="@+id/btnchange2"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@color/text_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/font_22"
            android:text="切换">

        </Button>

    </LinearLayout>





</LinearLayout>
